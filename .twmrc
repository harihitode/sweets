NoGrabServer
NoTitle # disable the title bar for the true geek
NoHighlight
NoCaseSensitive
RestartPreviousState
DecorateTransients
OpaqueMove
RandomPlacement
TitleFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
ResizeFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
MenuFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
IconFont "-adobe-helvetica-medium-r-normal--*-80-*-*-*-*-*-*"
IconManagerFont "-adobe-helvetica-bold-r-normal--*-80-*-*-*"
RightTitleButton ":delete" = f.delete
RightTitleButton ":dot" = f.fullzoom
BorderWidth 5

# when the cursor enter these apps, its window comes top automatically.
AutoRaise { }

# cursor looking;
Cursors
{
    Frame "sizing"
}

# happy color scheme ;)
# super user window is focused by changing the color
Color
{
    BorderColor "#4271ae" { "su" "#c82829" }
    DefaultBackground "#4271ae"
    DefaultForeground "#ffffff"
    TitleBackground "#4271ae" { "su" "#c82829" }
    TitleForeground "#ffffff"
    MenuBackground "#ffffff"
    MenuForeground "#8959a8"
    MenuBorderColor "#8959a8"
    MenuTitleBackground "#8959a8"
    MenuTitleForeground "#ffffff"
    IconBackground "#4271ae" { "su" "#c82829" }
    IconForeground "#ffffff"
    IconBorderColor "#4271ae" { "su" "#c82829" }
    IconManagerBackground "#4271ae"
    IconManagerForeground "#ffffff"
}

#
# Define some useful functions for motion-based actions.
#
MoveDelta 3
Function "move-or-lower" { f.move f.deltastop f.lower }
Function "move-or-raise" { f.move f.deltastop f.raise }
Function "move-or-iconify" { f.move f.deltastop f.iconify }
Function "resize-or-raise" {f.resize f.deltastop f.raise}

#
# Click: Button1, 2, 3; = Click left, middle, right
#
Button1 = : root : f.menu "Root Menu"
# window resizing
Button1 = : frame : f.function "resize-or-raise"
Button1 = s : frame : f.menu "Frame Menu"

## with meta key
Button1 = m : window|icon : f.function "move-or-raise"
Button3 = m : window|icon : f.function "move-or-lower"

Button1 = : title : f.function "move-or-raise"
Button3 = : title : f.raiselower

Button1 = : icon : f.function "move-or-iconify"
Button3 = : icon : f.iconify

Button1 = : iconmgr : f.iconify
Button3 = : iconmgr : f.iconify

# special key's bindings
"Up" = m : all : f.exec "exec xbacklight -inc 10" # Backlight
"Down" = m : all : f.exec "exec xbacklight -dec 10" # Backlight
"Right" = m : all : f.exec "exec amixer sset Master 1+" # Volume Up
"Left" = m : all : f.exec "exec amixer sset Master 1-" # Volume Down

# the menu configurations
Menu "System Menu"
{
    "System" f.title
    "Reload Configuration" f.restart
    "Logout" f.quit
}

Menu "Applications"
{
    "Root Xterm" f.exec "exec xterm -e su - &"
    "Emacs" f.exec "emacs &"
    "Slack" f.exec "slack &"
    "Firefox" f.exec "exec firefox &"
    "" f.nop
    "mutt" f.exec "exec xterm -e mutt &"
    "irssi" f.exec "exec xterm -e irssi &"
}

# And a menus with the usual things
Menu "Root Menu"
{
    "Start" f.title
    "Xterm" f.exec "exec xterm &"
    "Application" f.menu "Applications"
    "" f.nop
    "Show Iconmgr" f.showiconmgr
    "Hide Iconmgr" f.hideiconmgr
    "" f.nop
    "System" f.menu "System Menu"
}

Menu "Window Menu"
{
    "Move" f.move
    "Raise" f.raise
    "Lower" f.lower
    "" f.nop
    "Focus" f.focus
    "Unfocus" f.unfocus
    "Force Quit" f.destroy
}

Menu "Frame Menu"
{
    "fullscreen" f.fullzoom
    "minimize" f.iconify
    "delete" f.delete
}
